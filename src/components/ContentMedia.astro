---
import { Media } from 'accessible-astro-components'

const { imgSrc, reverseImg = false } = Astro.props
---

<section class="flex flex-col justify-center" id="content-media">
  <div class="container pt-10">
    <div class="grid grid-cols-1 items-center lg:grid-cols-2">
      <div class="lg:max-w-[90%] lg:pr-4">
        <slot />
      </div>
      <div class="flex items-start">
        <Media class="w-full p-0 rounded-lg mb-10" src={imgSrc} />
      </div>
    </div>
  </div>
</section>
