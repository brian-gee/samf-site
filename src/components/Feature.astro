---
import { Icon } from 'astro-icon'

const { icon = 'mdi:rocket', title = 'Title', href = '/' } = Astro.props
---

<div class="feature flex flex-col gap-4">
  <Icon name={icon} />
  <div class="content">
    <h3>{title}</h3>
    <p>
      <slot>Lorem ipsum dolor sit amet consectetur adipisicing elit. Hic, corporis.</slot>
    </p>
  </div>
  <div>
    <a href={href} class="inline-block py-3 px-4 font-bold text-center no-underline rounded-[3px] border-2 border-custom-navy transition-colors hover:border-custom-navy hover:bg-custom-gray/5">Learn More</a>
  </div>
</div>

